<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Fit_Fitness_Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Fit_Fitness_Client"
    Style="{StaticResource BaseStyle} "
    >

    <TabBar>
        <!-- First Tab: My Classes -->
        <Tab Title="My Classes">
            <ShellContent ContentTemplate="{DataTemplate local:DashboardPage}" />
        </Tab>
        <Tab Title="Search Classes">
            <ShellContent ContentTemplate="{DataTemplate local:SearchPage}" />
        </Tab>
        <!-- Additional Tabs Here -->
      <!--<MenuItem Text="Sign Out" Clicked="OnSignOutClicked" />-->
    </TabBar>

</Shell>

